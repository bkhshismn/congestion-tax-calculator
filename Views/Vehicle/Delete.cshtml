@model congestion_tax_calculator.Models.Vehicle

<h2>Delete Vehicle</h2>

<div>
    <h4>Are you sure you want to delete this?</h4>
    <dl class="row">
        <dt class="col-sm-2">Vehicle Type</dt>
        <dd class="col-sm-10">@Model.VehicleType</dd>
        <dt class="col-sm-2">License Plate</dt>
        <dd class="col-sm-10">@Model.LicensePlate</dd>
        <dt class="col-sm-2">Is Exempt</dt>
        <dd class="col-sm-10">@Model.IsExempt</dd>
    </dl>
    <form asp-action="DeleteConfirmed">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
