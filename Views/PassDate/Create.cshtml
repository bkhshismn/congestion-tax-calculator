@model congestion_tax_calculator.Models.PassDate

<h2>Create Pass Date</h2>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="Date"></label>
        <input asp-for="Date" class="form-control" type="datetime-local" />
        <span asp-validation-for="Date" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="VehicleId"></label>
        <select asp-for="VehicleId" class="form-control" asp-items="@(new SelectList(ViewBag.Vehicles, "Id", "VehicleType"))"></select>
        <span asp-validation-for="VehicleId" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>
